<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <h1>Addresses</h1>

  <table>
    <thead>
      <tr>
        <th>Street</th>
        <th>Cep</th>
        <th>City</th>
        <th>State</th>
        <th>Contact</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.street %></td>
          <td><%= address.cep %></td>
          <td><%= address.city %></td>
          <td><%= address.state %></td>
          <td><%= address.contact.name %></td>
          <td><%= link_to 'Show', address, class: 'button' %></td>
          <td><%= link_to 'Edit', edit_address_path(address), class: 'button' %></td>
          <td><%= link_to 'Destroy', address, class: 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Address', new_address_path, class: 'button' %>
  <%= link_to 'Back to menu', home_index_path, class: 'button' %>

<% end %>