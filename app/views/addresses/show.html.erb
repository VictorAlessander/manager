<%= content_for :body do %>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Street:</strong>
    <%= @address.street %>
  </p>

  <p>
    <strong>Cep:</strong>
    <%= @address.cep %>
  </p>

  <p>
    <strong>City:</strong>
    <%= @address.city %>
  </p>

  <p>
    <strong>State:</strong>
    <%= @address.state %>
  </p>

  <p>
    <strong>Contact:</strong>
    <%= @address.contact.name %>
  </p>

  <%= link_to 'Edit', edit_address_path(@address), class: 'button' %> |
  <%= link_to 'Back', addresses_path, class: 'button' %>

<% end %>