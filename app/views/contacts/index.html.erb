<%= content_for :body do %>

<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.age %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show', contact, class: 'button' %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: 'button' %></td>
        <td><%= link_to 'Destroy', contact, class: 'button', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path, class: 'button' %>
<%= link_to 'Back to menu', home_index_path, class: 'button' %>

<% end %>